{
  "name": "blog",
  "private": true,
  "description": "My blog",
  "version": "2.0.0",
  "author": "Kyle Shevlin <kyle.a.shevlin@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kyleshevlin/blog"
  },
  "bugs": {
    "url": "https://github.com/kyleshevlin/blog/issues"
  },
  "type": "module",
  "scripts": {
    "astro": "astro",
    "build": "astro check && astro build",
    "check": "astro check",
    "dev": "astro dev",
    "eslint": "eslint \"./src/**/*.{js,jsx,ts,tsx,astro}\" --no-error-on-unmatched-pattern",
    "fixRelatedPosts": "node ./scripts/fixRelatedPosts.js",
    "fixTags": "node ./scripts/fixTags.js",
    "format": "prettier --log-level=error --write \"src/**/*.{js,jsx,ts,tsx,astro}\"",
    "lint": "npm run eslint && npm run typecheck",
    "newpost": "node ./scripts/newPost.js",
    "newsnippet": "node ./scripts/newSnippet.js",
    "prepare": "husky install",
    "preview": "astro preview",
    "start": "astro dev",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@astrojs/check": "^0.4.1",
    "@astrojs/mdx": "^2.0.4",
    "@astrojs/react": "^3.0.9",
    "@astrojs/rss": "^4.0.2",
    "@astrojs/sitemap": "^3.0.4",
    "@astrojs/tailwind": "^5.1.0",
    "@kyleshevlin/layout": "^0.6.0",
    "@nanostores/react": "^0.7.1",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@xstate/react": "^3.2.2",
    "astro": "^4.1.2",
    "firebase": "^9.23.0",
    "lodash.debounce": "^4.0.8",
    "markdown-it": "^14.0.0",
    "nanostores": "^0.9.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-generate-context": "^4.0.0",
    "sanitize-html": "^2.12.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "xstate": "^4.38.3"
  },
  "devDependencies": {
    "@types/lodash.debounce": "^4.0.9",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-astro": "^0.31.2",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.2",
    "prettier": "^3.2.1",
    "prettier-plugin-astro": "^0.12.3",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "vitest": "^1.2.1"
  }
}
